    <Image Name="home" Location="home.png" Preload="false" Format="RGBA_8888" Filter="true" />
    
    <Image Name="next" Location="next.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <!--Image Name="prev" Location="prev.png" Preload="false" Format="RGBA_8888" Filter="true" /-->
    
    <Image Name="left" Location="pointleft.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="right" Location="pointright.png" Preload="false" Format="RGBA_8888" Filter="true" />

    <Brush Name="MenuBrush" Image="menu_image" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="BlackBox" Image="black_box" SrcRect="0, 0, 128, 128" Type="image" />
    <Brush Name="BoxButton" Image="box_under" SrcRect="0, 0, 256, 256" Type="9patch" ScaleArea="0,0,256,250" />
    <Brush Name="BoxOutline" Image="box_outline" SrcRect="0, 0, 256, 256" Type="9patch" ScaleArea="2, 2, 252, 252" />
    <Brush Name="Slider" Image="slider" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Groove" Image="groove" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Cross" Image="cross_image" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Back" Image="back" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Next" Image="next" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Prev" Image="back" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Left" Image="left" SrcRect="0, 0, 100, 60" Type="image" />
    <Brush Name="Right" Image="right" SrcRect="0, 0, 100, 60" Type="image" />
    <Brush Name="Question" Image="question_image" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Refresh" Image="refresh" SrcRect="0, 0, 64, 64" Type="image" />
    <Brush Name="Home" Image="home" SrcRect="0, 0, 64, 64" Type="image" />
    
    <Image Name="titlebg" Location="images/titlebackdrop.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Brush Name="TitleBackdrop" Image="titlebg" SrcRect="0, 0, 1280, 800" Type="image" />

</xml>