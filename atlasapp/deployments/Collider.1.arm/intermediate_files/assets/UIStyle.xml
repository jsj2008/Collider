    <Font Name="gulim_vlarge" Location="Gulim.ttf" AutoPointSize="16" PointSize="0" Preload="false" />

    <!-- Load UI image atlas -->
    <Image Name="question_image" Location="qmark.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="menu_image" Location="menu.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="cross_image" Location="cross.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="black_box" Location="box.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="box_under" Location="boxunder.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="box_outline" Location="boxoutline.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="slider" Location="slide.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="groove" Location="slide_groove.png" Preload="false" Format="RGBA_8888" Filter="true" />
    <Image Name="back" Location="back.png" Preload="false" Format="RGBA_8888" Filter="true" />
