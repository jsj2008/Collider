<?xml version="1.0"?>
<xml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="c:\AppEasy\docs\XOML.xsd">
	
	<!-- Create UI font -->
	<Font Name="serif" Location="Serif.ttf" PointSize="8" Preload="true" />
	<!--Font Name="serif" Location="http://www.drmop.com/Serif.ttf" PointSize="8" Preload="true" /-->

	<!-- Load UI image atlas -->
