<?xml version="1.0"?>
<xml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///C:/AppEasy/docs/XOML.xsd">

	<!-- Create a scene -->
	<Scene Name="Scene1" Current="true" >

		<!-- Create style for our label to save lots of typing -->
		<Style Name="LabelStyle1">
			<Set Property="Font" Value="serif" />
			<Set Property="Background" Value="Button1Brush" />
			<Set Property="BackgroundColour" Value="80, 80, 255, 255" />
			<Set Property="Size" Value="200, 200" />
		</Style>

		<!-- Create a bunch of styled labels -->
		<Label Style="LabelStyle1" Position="-100, -100" Text="Actor1" />
		<Label Style="LabelStyle1" Position="100, -100" Text="Actor2" />
		<Label Style="LabelStyle1" Position="100, 100" Text="Actor3" />
		<Label Style="LabelStyle1" Position="-100, 100" Text="Actor4" BackgroundColour="80, 255, 80, 255" />

		<Label Font="serif" Text="Demonstration of Using Styles. Styles can be used to style scenes and actors" BackgroundColour="80, 80, 80, 255" Background="Button1Brush" Size="-100, -10" Docking="top" AutoHeight="true" IgnoreCamera="true" />
		
	</Scene>


</xml>