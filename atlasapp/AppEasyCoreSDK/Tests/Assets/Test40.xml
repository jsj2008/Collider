		<Template Name="GridItemTemp">
			<Label Name="GridItem$index$" Background="SmallPanelBrush" BackgroundColour="200, 200, 200, 255" SelectedColour="200, 255, 200, 255" Font="serif" Text="Hello" GridPos="$gridpos$" Tappable="true" OnTapped="GridOnTapped$index$"  SelectType="normal" Selected="false">
