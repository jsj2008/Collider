		</Template>
		<Label Position="435, -550" Text="Horizontal List Box bound to a XOML array" Size="600, 50" Font="serif" Background="Button2Brush" SelectedColour="255, 255, 255, 200" SelectedTextColour="255, 255, 128, 200" AlignH="centre" Tappable="true" Draggable="true">
			<ListBox Name="ListBox" Position="0, 100" Size="600, 150" Background="PanelBrush" MultiSelect="true" ItemsData="ListBoxItems" ItemsTargetType="text" ItemsTemplate="ListBoxItemTemp" Tappable="true" Draggable="false" Orientation="horizontal" ClipMargin="10, 10, 10, 10" UseParentOpacity="false" />
		</Label>

