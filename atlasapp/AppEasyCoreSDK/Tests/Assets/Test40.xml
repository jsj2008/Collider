<?xml version="1.0"?>
<xml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="c:\AppEasy\docs\XOML.xsd">

	<Scene Name="Scene1" Camera="Cam" Extents="-8000, -4000, 16000, 8000" Current="true" Batch="false" ClipStatic="true" Timeline="Scene_FadeIn_Timeline" OnCreate="Created">

		<Actions Name="Created">
			<Action Method="PauseTime" P1="false" />
		</Actions>

		<LoadXOML File="frog.xml" />

		<Animation Name="ScrollIn" Type="vec2" Duration="2">
			<Frame Value="500, 0" Time="0"/>
			<Frame Value="0, 0" Time="2"/>
		</Animation>
		<Timeline Name="ScrollIn" AutoPlay="true">
			<Anim Anim="ScrollIn" Target="Position" Repeat="1" />
		</Timeline>
		<Animation Name="Scene_FadeIn" Type="vec4" Duration="2" >
			<Frame Value="0, 0, 0, 255"        Time="0.0" Easing="quadin" />
			<Frame Value="255, 255, 255, 255"  Time="2.0"/>
		</Animation>

		<Animation Name="Scene_ZoomIn_Scale_Anim" Type="float" Duration="3" >
			<Frame Value="5.0"  Time="0.0"/>
			<Frame Value="1.0"  Time="3.0"/>
		</Animation>

		<Animation Name="Scene_ZoomIn_Position_Anim" Type="vec2" Duration="3" >
			<Frame Value="500, 500"  Time="0.0"/>
			<Frame Value="0, 0" Time="3.0"/>
		</Animation>

		<Timeline Name="Scene_FadeIn_Timeline" AutoPlay="true">
			<Anim Anim="Scene_FadeIn" Target="Colour" Repeat="1" StartAtTime="0" />
			<Anim Anim="Scene_ZoomIn_Scale_Anim" Target="Scale" Repeat="1" StartAtTime="0" />
			<Anim Anim="Scene_ZoomIn_Position_Anim" Target="Position" Repeat="1" StartAtTime="0" />
		</Timeline>

		<Variable Name="slider_test1" Type="float" Value="15" />

		<!-- Create a camera -->
		<Camera Name="Cam" Position="0, 0" Angle="0" Scale="1.0" TouchPanX="true" TouchPanY="true" VelocityDamping="0.8, 0.8" IgnoreActors="false" />

		<!-- Create a complex control animation -->
		<Animation Name="SP_PosAnim" Duration="5.0" Type="vec2" AutoDelete="true">
			<Frame Value="0, 0" Time="0" Easing="quadout" />
			<Frame Value="-192, -100" Time="1" Easing="quadout" />
			<Frame Value="192, -259" Time="2" Easing="quadout" />
			<Frame Value="600, -100" Time="3" Easing="quadout" />
			<Frame Value="200, -200" Time="4" Easing="quadout" />
			<Frame Value="0, 0" Time="5" Easing="quadout" />
		</Animation>
		<Animation Name="SP_AngleAnim" Duration="5.0" Type="float" AutoDelete="true">
			<Frame Value="0" Time="0" Easing="quadin" />
			<Frame Value="45" Time="1" Easing="quadin" />
			<Frame Value="90" Time="2" Easing="quadin" />
			<Frame Value="180" Time="3" Easing="quadin" />
			<Frame Value="45" Time="4" Easing="quadin" />
			<Frame Value="0" Time="5" Easing="quadin" />
		</Animation>
		<Animation Name="SP_ScaleAnim" Duration="5.0" Type="vec2" AutoDelete="true">
			<Frame Value="1, 1" Time="0" Easing="quadin" />
			<Frame Value="1, 1" Time="3" Easing="quadin" />
			<Frame Value="0.5, 0.5" Time="4" Easing="quadin" />
			<Frame Value="1, 1" Time="5" Easing="quadin" />
		</Animation>
		<Timeline Name="SP_PosAnim" AutoPlay="true" AutoDelete="true">
			<Anim Anim="SP_PosAnim" Repeat="1" Target="PositionOrg" Delta="true" />
			<Anim Anim="SP_AngleAnim" Repeat="1" Target="Angle" />
			<Anim Anim="SP_ScaleAnim" Repeat="1" Target="Scale" />
		</Timeline>

		<!-- Create a colour animation -->
		<Animation Name="ButtonFlash" Duration="2.0" Type="vec4">
			<Frame Value="128, 180, 255, 255" Time="0" Easing="quadin" />
			<Frame Value="150, 120, 200, 255" Time="1" Easing="quadout" />
			<Frame Value="128, 180, 255, 255" Time="2" Easing="quadin" />
		</Animation>
		<Timeline Name="ButtonFlash" AutoPlay="true">
			<Anim Anim="ButtonFlash" Repeat="0" Target="BackgroundColour" />
		</Timeline>

		<!-- Create a button breathing animation -->
		<Animation Name="ButtonBreath" Duration="2.0" Type="vec2">
			<Frame Value="1.0, 1.0" Time="0" Easing="quadin" />
			<Frame Value="1.2, 1.0" Time="0.5" Easing="quadin" />
			<Frame Value="1.0, 1.0" Time="1.0" Easing="quadin" />
			<Frame Value="1.0, 1.2" Time="1.5" Easing="quadin" />
			<Frame Value="1.0, 1.0" Time="2.0" Easing="quadin" />
		</Animation>

		<!-- Create a timeline top play the button breathing anination -->
		<Timeline Name="ButtonBreath" AutoPlay="true">
			<Anim Anim="ButtonBreath" Repeat="0" Target="Scale" />
		</Timeline>

		<!-- Create a checkbox spin animation -->
		<Animation Name="CheckBoxSpin" Duration="2.0" Type="float">
			<Frame Value="0" Time="0" Easing="quadin" />
			<Frame Value="-20" Time="0.5" />
			<Frame Value="0" Time="1.0" Easing="quadin" />
			<Frame Value="20" Time="1.5" />
			<Frame Value="0" Time="2.0" Easing="quadin" />
		</Animation>

		<!-- Create a timeline to play the checkbox spin anination -->
		<Timeline Name="CheckBoxSpin1" AutoPlay="true">
			<Anim Anim="CheckBoxSpin" Repeat="0" Target="Angle" />
		</Timeline>
		<Timeline Name="CheckBoxSpin2" AutoPlay="true">
			<Anim Anim="CheckBoxSpin" Repeat="0" Target="Angle" StartAtTime="1" />
		</Timeline>

		<!-- Create a grid label animation -->
		<Animation Name="GridButtonBreath" Duration="1.0" Type="vec2">
			<Frame Value="1.1, 1.1" Time="0" Easing="quadin" />
			<Frame Value="0.5, 0.5" Time="0.5" Easing="quadin" />
			<Frame Value="1.1, 1.1" Time="1.0" Easing="quadin" />
		</Animation>

		<!-- Create a spin animation -->
		<Animation Name="SpinAnim" Duration="4.0" Type="float">
			<Frame Value="0" Time="0" Easing="quadin" />
			<Frame Value="180" Time="2" Easing="quadin" />
			<Frame Value="360" Time="4" Easing="quadin" />
		</Animation>
		<Timeline Name="SpinAnim" AutoPlay="true">
			<Anim Anim="SpinAnim" Repeat="1" Target="Angle" />
		</Timeline>

		<Animation Name="grid_grow" Type="vec2" Duration="3" >
			<Frame Value="300, 300"    Time="0.0" Easing="quadin" />
			<Frame Value="800, 480"   Time="1.5" Easing="quadout" />
			<Frame Value="300, 300"    Time="3" Easing="quadin" />
		</Animation>
		<Timeline Name="grid_grow" AutoPlay="true">
			<Anim Anim="grid_grow" Repeat="0" Target="Size" />
		</Timeline>

		<!--               -->
		<!-- Create a grid -->
		<!--               -->
		<!-- GridItems - Define a list of itemss that will be bound to the grid  -->
