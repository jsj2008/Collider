<?xml version="1.0"?>
<xml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:///C:/AppEasy/docs/XOML.xsd">

	<!-- Create a scene -->
	<Scene Name="Scene1" Current="true" >

		<!-- ListBoxItems - Defines a list of items that will be bound to the list box -->
		<Variable Name="ListBoxItems" Type="arraystring" Size="10" Value="Item 1, Item 2, Item 3, Item 4, Item 5, Item 6, Item 7, Item 8, Item 9, Item 10" />
		<Variable Name="ListBoxItems2" Type="arraystring" Size="4" Value="Item 1, Item 2, Item 3, Item 4" />

		<!-- Create a template that will be used to generate the list box actors -->
		<Template Name="ListBoxItemTemp">
			<Label Name="ListItemA$index$" Size="-90, 70" Background="SmallPanelBrush" 	BackgroundColour="210, 210, 210, 255" SelectedColour="80, 80, 255, 255" Font="serif" Margin="20, 20, 20, 20" SelectType="toggle" Selected="false" />
		</Template>
		<Template Name="ListBoxItemTemp2">
			<Label Name="ListItemA$index$" Size="-90, 70" Background="Button1Brush" 	BackgroundColour="110, 110, 255, 255" SelectedColour="80, 80, 255, 255" Font="serif" Margin="20, 20, 20, 20" SelectType="normal" Selected="false" />
		</Template>

		<!-- Create the list box -->
		<ListBox Name="ListBox" Size="-100, -100" Background="PanelBrush" MultiSelect="true" ItemsData="ListBoxItems" ItemsTargetType="text" ItemsTemplate="ListBoxItemTemp" ClipMargin="10, 10, 10, 10" UseParentOpacity="false" />

		<StackPanel Orientation="vertical" Size="-10, -100" Docking="right" >
			<Label Font="serif" Text="Use Template 1" BackgroundColour="80, 80, 80, 255" Background="Button1Brush" Size="-100, -10" AutoHeight="true" OnTapped="Tapped" Layer="5">
				<Actions Name="Tapped">
					<Action Method="SetProperty" P1="ItemsTemplate" P2="ListBoxItemTemp" P3="ListBox" />
				</Actions>
			</Label>
			<Label Font="serif" Text="Use Template 2" BackgroundColour="80, 80, 80, 255" Background="Button1Brush" Size="-100, -10" AutoHeight="true" OnTapped="Tapped" Layer="5">
				<Actions Name="Tapped">
					<Action Method="SetProperty" P1="ItemsTemplate" P2="ListBoxItemTemp2" P3="ListBox" />
				</Actions>
			</Label>
			<Label Font="serif" Text="Use Data 1" BackgroundColour="80, 80, 80, 255" Background="Button1Brush" Size="-100, -10" AutoHeight="true" OnTapped="Tapped" Layer="5">
				<Actions Name="Tapped">
					<Action Method="SetProperty" P1="ItemsData" P2="ListBoxItems" P3="ListBox" />
				</Actions>
			</Label>
			<Label Font="serif" Text="Use Data 2" BackgroundColour="80, 80, 80, 255" Background="Button1Brush" Size="-100, -10" AutoHeight="true" OnTapped="Tapped" Layer="5">
				<Actions Name="Tapped">
					<Action Method="SetProperty" P1="ItemsData" P2="ListBoxItems2" P3="ListBox" />
				</Actions>
			</Label>
		</StackPanel>

		<Label Font="serif" Text="Demonstration of autogenerated UI ListBox from bound data" BackgroundColour="80, 80, 80, 255" Background="Button1Brush" Size="-100, -10" Docking="top" AutoHeight="true" IgnoreCamera="true" />
		
	</Scene>


</xml>